<!-- 切换主题按钮样式 -->
<style>
    #themeToggle {
        border: 0;
        background: none;
    }

    /* 默认情况下, 显示太阳图标, 隐藏月亮图标 */
    .sun {
        fill: black;
    }
    .moon {
        fill: transparent;
    }

    /* 如果处于暗黑模式, 则显示月亮图标, 隐藏太阳图标 */
    :global(.dark) .sun {
        fill: transparent;
    }
    :global(.dark) .moon {
        fill: white;
    }
</style>

<script>
    // 定义立即执行函数, 得到返回结果, 保存到 theme 中
    const theme = (() => {
        // 优先从 localStorage 中获取用户设置的主题
        if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
        ) {
            // 如果有用户设置的主题, 则返回该主题
            return localStorage.getItem("theme") || "light";
        }
        // 根据系统偏好设置返回主题
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            return "dark";
        }
        // 否则返回默认的亮色主题
        return "light";
    })();

    // 根据 theme 的值判断, 如果是 light 则移除 dark 类, 否则添加 dark 类
    if (theme === "light") {
        document.documentElement.classList.remove("dark");
    } else {
        document.documentElement.classList.add("dark");
    }

    // 将当前主题存储到 localStorage 中
    window.localStorage.setItem("theme", theme);

    // 一个点击事件处理函数, 绑定到切换主题按钮上
    const handleToggleClick = () => {
        // 点击时
        // 获取<html>元素
        const element = document.documentElement;
        // 切换 dark 类(有就删, 没有就加)
        element.classList.toggle("dark");

        // 判断切完类后, 当前是暗黑模式还是亮色模式, 并存储到 localStorage 中
        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    // 把handleToggleClick函数绑定到themeToggle按钮的点击事件上
    const themeToggle = document.getElementById("themeToggle");
    // 如果找到了按钮, 则添加点击事件监听器
    if (themeToggle) {
        themeToggle.addEventListener("click", handleToggleClick);
    }
</script>
